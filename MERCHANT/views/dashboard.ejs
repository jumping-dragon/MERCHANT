<h1 class="mt-4">Dashboard</h1>
<a href="/users/logout" class="btn btn-secondary">Logout</a>


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  
  <body>
    <div class="container">
      <div class="row mt-3">
      <h1>My Fortune</h1>
      </div>
      <div class="row mt-3">
        <div class="col-4">
          <div class="card" style="width: 18rem;">
            <img src="img/redmascot.jpg" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title" id="1">Night Shots</h5>
              <p class="card-text">To Give up is not a way~</p>
              <a href="#" class="btn btn-primary">Hate</a>
            </div>
          </div>
        </div>
        <div class="col-8">
          <div class="jumbotron">
            <h1 class="display-4">Hello, <%= user.name %> !</h1>
            <p class="lead">You still have something in your fortune</p>
            <hr class="my-4">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Amount</th>
                  <th>Currency</th>
                  <th>Records</th>
                </tr>
              </thead>
              <tbody>
              	<% for (var i = 0; i < user.wallet.length; i++) { %>
                <tr>
                  <th scope="row"><%i%></th>
                  <td><%= user.wallet[i].amount %></td>
                  <td><%= user.wallet[i].currency %></td>
                  <td><%= user.wallet[i]._id %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-12">
          <h1 class="display-4 text-center">TOP UP</h1>
          <form action="/users/topup" method="POST">
            <div class="form-group">
              <label for="currency">Currency</label>
              <input
              type="text"
              id="new_currency"
              name="new_currency"
              class="form-control"
              placeholder="Enter Currency"
              />
            </div>
            <div class="form-group">
              <label for="password">Amount</label>
              <input
              type="number"
              id="new_amount"
              name="new_amount"
              class="form-control"
              placeholder="Enter Amount"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Top up into wallet</button>
           <!-- <% include ./partials/modals %> -->
          </form>
        </div> <!-- Topup Form -->
      </div>
      <div class="row mt-3">
        <div class="col">
          <h1 class="display-4">TRADE YOUR FORTUNE!</h1>
          <form action="/users/trade" method="POST">
            <div class="form-group">
              <label for="currency">Currency</label>
              <input
              type="text"
              id="new_currency"
              name="new_currency"
              class="form-control"
              placeholder="Enter Currency"
              />
            </div>
            <div class="form-group">
              <label for="password">Amount</label>
              <input
              type="number"
              id="new_amount"
              name="new_amount"
              class="form-control"
              placeholder="Enter Amount"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Transfer</button>
          </form>
        </div>
        <div class="col">
          
        </div>
      </div>
    </div>


    <!-- Optional JavaScript -->
    
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script  src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="
    sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="./js/app.js"></script>
  </body>
</html>